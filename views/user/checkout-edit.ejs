<%- include('../partials/userheader') %>



<section>
  <div class="container custom-container mt-4  " >
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card-header">
            <h5>Edit address</h5>
        </div>
        <div class="card-body">
            

            <form method="POST" action="/updateuserdetails?id=<%= address._id %>&flag=one" name="enq">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>Name <span class="required"></span></label>
                        <input required="" class="form-control square" style="border-width: 2px;" name="name" type="text" value="<%= address.name %>">
                    </div>
                    
                    <div class="form-group col-md-12">
                        <label>Mobile <span class="required">*</span></label>
                        <input required="" class="form-control square" style="border-width: 2px;" name="mobile" type="number" value="<%= address.mobile %>">
                    </div>
                    <div class="form-group col-md-12">
                        <label>House Name <span class="required">*</span></label>
                        <input required="" class="form-control square" style="border-width: 2px;" name="houseName" type="text" value="<%= address.houseName %>">
                    </div>
                    <div class="form-group col-md-12">
                        <label>City / Town<span class="required">*</span></label>
                        <input required="" class="form-control square" style="border-width: 2px;" name="cityOrTown" type="text" value="<%= address.cityOrTown %>">
                    </div>
                    <div class="form-group col-md-12">
                        <label>Pincode <span class="required">*</span></label>
                        <input required="" class="form-control square" style="border-width: 2px;" name="pincode" type="number" value="<%= address.pincode %>">
                    </div>
                    <div class="form-group col-md-12">
                        <label>District<span class="required">*</span></label>
                        <input required="" class="form-control square" style="border-width: 2px;" name="district" type="text" value="<%= address.district %>">
                    </div>
                    <div class="form-group col-md-12">
                        <label>State<span class="required">*</span></label>
                        <input required="" class="form-control square" style="border-width: 2px;" name="state" type="text" value="<%= address.state %>">
                    </div>
                    <div class="form-group col-md-12">
                        <label>Country<span class="required">*</span></label>
                        <input required="" class="form-control square" style="border-width: 2px;" name="country" type="text" value="<%= address.country %>">
                   </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-fill-out submit" name="submit" value="Submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
   </div> 
</div>

</section>

<%- include('../partials/userfooter') %>